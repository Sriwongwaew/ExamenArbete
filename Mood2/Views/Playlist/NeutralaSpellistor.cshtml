@model List<Playlist>
@{
    Layout = "_LayoutMood";
}


<body>
    <div id="View1" class="container" style="margin-top: 50px;">

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link " asp-action="AllaSpellistor">Alla</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-action="GladaSpellistor">Glad</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-action="LedsnaSpellistor">Ledsen</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-action="ArgaSpellistor">Arg</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="RäddaSpellistor">Rädd</a>
            </li>
            <li class="nav-item">
                <a class="nav-link  active" asp-action="NeutralaSpellistor">Neutral</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-action="FörvånadSpellistor">Förvånad</a>
            </li>


        </ul>

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Namn</th>
                    <th scope="col">Mood</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@item.PlayListLink">@item.PlayListName</a>
                        </td>
                        <td>@item.EmotionData.Name</td>
                    </tr>
                }


            </tbody>
        </table>


    </div>

    <link rel="stylesheet" href="~/css/main.css" />
</body>
